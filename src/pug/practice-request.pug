extends layouts/default.pug

block content
  div(class="container")
    div(class="row mt-4")
      div(class="col")
        h4 GitHub User Name
        form(onsubmit="getMyRepositories(); return false;")
          div(class="form-group")
            input(id="myText" type="text" class="form-control")
          input(type="submit" value="Submit Name" class="btn btn-secondary mt-3")

    div(class="row mt-4")
      div(class="col-6")
        h4 
          span(id="repoCount") 
          | Repos
        div(id="myRepos")

      div(class="col-6")
        h4 Details
        div(id="details")